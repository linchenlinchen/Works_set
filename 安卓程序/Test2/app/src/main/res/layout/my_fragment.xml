<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f4f5f4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:name="com.kosphere.test2.MyTopFragment"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/my_top" />

    <fragment
        android:name="com.kosphere.test2.MyCenterFragment"
        android:layout_marginBottom="10dp"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:id="@+id/my_center" />

    <fragment
        android:name="com.kosphere.test2.MyBottomFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/my_bottom" />
    <!--<android.support.v7.widget.AppCompatImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"/>-->

</LinearLayout>
